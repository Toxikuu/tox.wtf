/* TODO: Woff2 these fonts */
@font-face {
    font-family: spleen;
    src: url('/s/fonts/spleen.otf') format('opentype');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: tamzen;
    src: url('/s/fonts/tamzen.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
}

body {
    font-family: tamzen;
    background-color: #000;
    text-align: left;
    color: #e9e9e9;
    margin: 2rem;
}

header {
    font-family: tamzen;
    text-align: right;
    background-color: #000;
    color: #e9e9e9;
}

footer {
    font-family: tamzen;
    text-align: left;
    background: #000;
    color: #6345e6;
}


blockquote {
    font-family: tamzen;
    text-align: left;
    background-color: #090909;
    color: #6345e6;
}


/* links */
a {
    font-family: tamzen;
    color: #6345e6;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}


/* lists */
ul {
    list-style: none;
    padding: 0;
}

li::before {
    content: "- ";
    color: #e9e9e9;
    margin-right: 0.5em;
}


/* code blocks */
pre {
    background: #090909;
    color: #6345e6;

    border: 1px solid #e9e9e9;

    overflow-x: auto;
    padding-left: 1em;
}

code {
    font-family: tamzen;
    font-size: 0.9em;
}
